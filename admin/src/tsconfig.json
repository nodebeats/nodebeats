{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es6",
      "dom"
    ],
    "mapRoot": "./",
    "module": "es6",
    "moduleResolution": "node",
    "outDir": "../dist/out-tsc",
    "sourceMap": true,
    "target": "es5",
    "typeRoots": [
      "../node_modules/@types"
    ]
  },
  "files": [
    "app/app.module.ts",
    "main.ts",
    "typings.d.ts"
  ],
  "exclude": [
    "app/shared/components/ng2-bootstrap/components/common.ts"
  ],
  "angularCompilerOptions": {
    "genDir": "aot"
  }
}
